doctype html
html(lang="en")
    head
        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
        meta(name="description" content="")
        meta(name="author" content="")
        title Inicio de sesión
        // Bootstrap core CSS
        link(href="/public/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet")
        // Custom fonts for this template
        link(href="/public/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css")
        // Custom styles for this template
        link(href="/public/css/sb-admin.css" rel="stylesheet")
    body.bg-dark
        .container
            .card.card-login.mx-auto.mt-5
                .card-header(align="center")
                    img(src="/public/images/logoNombre.png" width="247" height="91" alt="STAUS" alin)
                .card-header Inicio de sesión
                .card-body
                    form(method="post")
                        if loginMessage != ""
                            .alert.alert-danger.alert-dismissible.fade.show(role="alert") 
                                | #{loginMessage} 
                                button.close(type="button" data-dismiss="alert" aria-label="Close")
                                    span(aria-hidden="true") ×
                        .form-group
                            .form-label-group
                                input#inputUsername.form-control(type="text" name="username" placeholder="ejemplo: admin" required="required" autofocus="autofocus")
                                label(for="inputUsername") Nombre de usuario
                        .form-group
                            .form-label-group
                                input#inputPassword.form-control(type="password" name="password" placeholder="12345" required="required")
                                label(for="inputPassword") Contraseña
                        button.btn.btn-primary.btn-block(type="submit") Iniciar sesión 

        // Bootstrap core JavaScript
        script(src="/public/vendor/jquery/jquery.min.js")
        script(src="/public/vendor/bootstrap/js/bootstrap.bundle.min.js")
        // Core plugin JavaScript
        script(src="/public/vendor/jquery-easing/jquery.easing.min.js")